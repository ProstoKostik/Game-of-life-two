<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="true">

    <display-name>game-of-life-servlet</display-name>

    <servlet>
        <servlet-name>GolServlet</servlet-name>
        <servlet-class>ru.sbt.rgrtu.gol.web.GolServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GolServlet</servlet-name>
        <url-pattern>/game/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>GolFilter</filter-name>
        <filter-class>ru.sbt.rgrtu.gol.web.GolFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GolFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
